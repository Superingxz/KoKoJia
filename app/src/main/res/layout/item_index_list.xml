<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_index_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_index_list"
        android:layout_width="190px"
        android:layout_height="142px"
        android:scaleType="centerCrop"
        android:src="@mipmap/imgloading"
        />

    <TextView
        android:id="@+id/tv_index_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_index_list"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tv_index_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_index_list"
        android:layout_below="@id/tv_index_list_title"
        android:textColor="#ff7112"
        />

    <TextView
        android:id="@+id/tv_index_list_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_index_list_price"
        android:layout_below="@id/tv_index_list_title"
        />

    <TextView
        android:id="@+id/tv_index_list_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_index_list_discount_price"
        android:layout_below="@id/tv_index_list_title"
        android:textColor="#bf1a21"
        />

    <TextView
        android:id="@+id/tv_coursenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/iv_index_list"
        android:layout_toRightOf="@id/iv_index_list"
        android:text="@string/courseNum"
        android:textSize="12sp"
        android:textColor="#999"
        />

    <TextView
        android:id="@+id/tv_index_list_courseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_index_list"
        android:layout_toRightOf="@id/tv_coursenum"
        android:layout_marginLeft="3dp"
        android:textSize="12sp"
        android:textColor="#999"
        />

    <TextView
        android:id="@+id/tv_trailnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/iv_index_list"
        android:layout_toRightOf="@id/tv_index_list_courseNum"
        android:text="@string/user"
        android:textSize="12sp"
        android:textColor="#999"
        />

    <TextView
        android:id="@+id/tv_index_list_trailNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@id/iv_index_list"
        android:layout_toRightOf="@id/tv_trailnum"
        android:textSize="12sp"
        android:textColor="#999"
        />

</com.zhy.autolayout.AutoRelativeLayout>
