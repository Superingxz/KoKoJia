<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#fff"
    >

    <ImageView
        android:id="@+id/iv_home_listview_course"
        android:layout_width="190px"
        android:layout_height="142px"
        android:scaleType="centerCrop"
        android:src="@mipmap/imgloading"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:orientation="vertical">



    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_home_listview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@id/iv_home_listview_course"
        android:layout_toRightOf="@id/iv_home_listview_course"
        android:textColor="#494949"
        android:text="title"
        />
    <TextView
        android:id="@+id/tv_home_listview_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_home_listview_course"
        android:layout_below="@id/tv_home_listview_title"
        android:textColor="#ff7112"
        />
    <TextView
        android:id="@+id/tv_home_listview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_home_listview_discount_price"
        android:layout_below="@id/tv_home_listview_title"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/tv_home_listview_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_home_listview_price"
        android:layout_below="@id/tv_home_listview_title"
        android:layout_marginLeft="3dp"
        android:textColor="#bf1a21"
        />

    <TextView
        android:id="@+id/classnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_home_listview_course"
        android:layout_toRightOf="@id/iv_home_listview_course"
        android:layout_marginLeft="10dp"
        android:text="@string/courseNum"
        android:textColor="#999"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_home_listview_class_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_home_listview_course"
        android:layout_toRightOf="@id/classnum"
        android:layout_marginLeft="3dp"
        android:textColor="#999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/trialnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_home_listview_course"
        android:layout_toRightOf="@id/tv_home_listview_class_num"
        android:layout_marginLeft="10dp"
        android:text="@string/user"
        android:textColor="#999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_home_listview_trial_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_home_listview_course"
        android:layout_toRightOf="@id/trialnum"
        android:layout_marginLeft="3dp"
        android:textColor="#999"
        android:textSize="12sp"/>

</com.zhy.autolayout.AutoRelativeLayout>
