<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ResetPayPasswordActivity">

    <TextView
        android:id="@+id/tv_reset_pay_password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        android:text="hint"
        android:textSize="16sp"
        android:textColor="#fd9a34"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码："/>

        <EditText
            android:id="@+id/et_reset_pay_password"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:background="@drawable/regist_edittext_rectangle_gray"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："/>

        <EditText
            android:id="@+id/et_comfirm_pay_password"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@drawable/regist_edittext_rectangle_gray"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="点击图片可换一张"
        android:textColor="#fd9a34"
        android:textSize="16sp"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:padding="10dp"
            android:background="@drawable/regist_edittext_rectangle_gray"/>

        <ImageView
            android:id="@+id/iv_get_code"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="#FFEDEDED"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_commit_reset_pay_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:background="@drawable/selector_rectangle_solid_blue"/>

</com.zhy.autolayout.AutoLinearLayout>
