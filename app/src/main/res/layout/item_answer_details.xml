<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_answer_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_answer_replyuser"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/imgloading"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_item_answer_replyuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_answer_replyuser"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/huifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_item_answer_replyuser"
        android:text="回复"
        android:textColor="#999"/>

    <TextView
        android:id="@+id/tv_item_answer_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/huifu"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/tv_item_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item_answer_replyuser"
        android:layout_below="@id/huifu"
        android:textColor="#999"
        />

    <TextView
        android:id="@+id/tv_item_answer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_answer_replyuser"
        android:layout_below="@id/tv_item_answer_content"
        android:textColor="#999"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_item_answer_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_item_answer_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="回复"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
