<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nuoxian.kokojia.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#2d353c"
            >

            <TextView
                android:id="@+id/iv_login_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/back"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="@drawable/search_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="41px"
            android:layout_marginRight="41px"
            android:layout_marginTop="41px"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fd9a34"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_Login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/regist_edittext_selector"
                android:drawableLeft="@mipmap/l_touxiang"
                android:drawablePadding="10dp"
                android:hint="请填写手机号码或邮箱"
                android:padding="10dp"
                android:textColorHint="#d0d6d9" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41px"
                android:background="@drawable/regist_edittext_selector"
                android:drawableLeft="@mipmap/l_suo"
                android:drawablePadding="10dp"
                android:hint="请填写密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="#d0d6d9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41px">

                <LinearLayout
                    android:id="@+id/ll_login_remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_login_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/square_frame1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="记住密码" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:text="忘记密码?" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41px"
                android:background="#02b81b"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="41px" />

            <TextView
                android:id="@+id/tv_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:text="没有账号?马上注册"
                android:textColor="#00aeff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#FFDEDBDB"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/all_login_by_qq"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/rectangle_blue"
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qq"
                    android:textColor="@drawable/qq_login_text_color"
                    android:textSize="41px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="QQ登录"
                    android:textSize="41px"
                    android:textColor="@drawable/qq_login_text_color"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/all_login_by_wx"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/rectangle_green"
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weixin"
                    android:textColor="@drawable/weixin_login_text_color"
                    android:textSize="41px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="微信登录"
                    android:textSize="41px"
                    android:textColor="@drawable/weixin_login_text_color"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/all_login_by_baidu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/rectangle_violet"
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baidu"
                    android:textColor="@drawable/baidu_login_text_color"
                    android:textSize="41px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="百度登录"
                    android:textSize="41px"
                    android:textColor="@drawable/baidu_login_text_color"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
