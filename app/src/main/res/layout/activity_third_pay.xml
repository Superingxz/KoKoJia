<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.nuoxian.kokojia.activity.ThirdPayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2d353c"
        >

        <TextView
            android:id="@+id/iv_third_pay_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="@string/back"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/search_background"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="确认订单"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_third_pay"
            android:layout_width="190px"
            android:layout_height="128px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_third_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_third_pay"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#494949" />

        <TextView
            android:id="@+id/tv_third_pay_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_third_pay_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_third_pay"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/tv_third_pay_class_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_third_pay"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_third_pay"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/tv_third_pay_trial_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_third_pay"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_third_pay_class_num"
            android:textColor="#999999" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="41px"
        android:text="可用金额" />

    <TextView
        android:id="@+id/tv_third_pay_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff7112"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="61px"
        android:text="您需要支付" />

    <TextView
        android:id="@+id/tv_third_pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff7112"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE7E1E1"
        android:layout_marginTop="41px"/>

    <ListView
        android:id="@+id/lv_third_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <Button
        android:id="@+id/btn_third_pay_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00aeef"
        android:text="订单支付"
        android:textColor="#fff" />


</LinearLayout>
