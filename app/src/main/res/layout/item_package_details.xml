<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_package_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_package_details"
        android:layout_width="200px"
        android:layout_height="151px"
        android:src="@mipmap/imgloading"/>

    <TextView
        android:id="@+id/tv_package_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_package_details"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="title"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tv_package_item_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_package_details"
        android:layout_below="@id/tv_package_item_title"
        android:text="discountprice"
        android:textColor="#ff7112"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_package_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_package_item_discount_price"
        android:layout_below="@id/tv_package_item_title"
        android:text="price"
        android:textColor="#ff7112"
        />

    <TextView
        android:id="@+id/tv_package_item_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_package_item_price"
        android:layout_below="@id/tv_package_item_title"
        android:text="countdown"
        android:textColor="#bf1a21"
        android:visibility="gone"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/iv_package_details"
        android:layout_toRightOf="@id/iv_package_details"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courseNum"
            />

        <TextView
            android:id="@+id/tv_package_item_course_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="course"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/user"
            />

        <TextView
            android:id="@+id/tv_package_item_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="user"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
