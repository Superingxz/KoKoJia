<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.nuoxian.kokojia.activity.RefundActivity">

    <RadioGroup
        android:id="@+id/rg_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <RadioButton
            android:id="@+id/rb_refund_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:checked="true"
            android:textColor="@drawable/text_color_gray_black" />

        <RadioButton
            android:id="@+id/rb_refund_prepare_solve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="待处理"
            android:textColor="@drawable/text_color_gray_black" />

        <RadioButton
            android:id="@+id/rb_refund_refunded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="已退款"
            android:textColor="@drawable/text_color_gray_black" />

        <RadioButton
            android:id="@+id/rb_refund_refused"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="已拒绝"
            android:textColor="@drawable/text_color_gray_black" />

        <RadioButton
            android:id="@+id/rb_refund_platform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="平台介入"
            android:textColor="@drawable/text_color_gray_black" />

        <RadioButton
            android:id="@+id/rb_refund_closed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="已关闭"
            android:textColor="@drawable/text_color_gray_black" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_refund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.zhy.autolayout.AutoLinearLayout>
