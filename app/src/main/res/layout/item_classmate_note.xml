<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_classmate_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20px"
    android:background="#fff">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.nuoxian.kokojia.view.RoundImageView
            android:id="@+id/iv_classmate_note"
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerCrop"
            android:src="@mipmap/imgloading"
            />

        <TextView
            android:id="@+id/tv_classmate_note_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_gravity="center_vertical"
            android:text="user"
            android:textColor="@color/blue"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_classmate_note_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="20px"
        android:text="content"
        android:textColor="#666"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_classmate_note_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/background_click_white_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zan"
                android:textColor="#999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="é¡¶"
                android:textColor="#999"/>

            <TextView
                android:id="@+id/tv_classmate_note_ding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="(0)"
                android:textColor="#999"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_classmate_note_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="time"
            android:textColor="#999"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
