<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.nuoxian.kokojia.activity.FindPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2d353c"
        >

        <TextView
            android:id="@+id/iv_find_password_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="@string/back"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/search_background"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textColor="#fff"
            android:textSize="18sp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_find_password_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fd9a34"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_find_password_phone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:background="@drawable/regist_edittext_selector"
            android:hint="请输入手机号码"
            android:textColorHint="#d0d6d9"
            android:drawableLeft="@mipmap/l_touxiang"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:id="@+id/et_find_password_identifying_code"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/regist_edittext_selector"
            android:drawableLeft="@mipmap/l_key"
            android:drawablePadding="10dp"
            android:textColorHint="#d0d6d9"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/btn_find_password_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="获取验证码"
            android:textColor="#fff"
            android:background="#fd9a34"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_find_password_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#02b81b"
        />

</LinearLayout>
